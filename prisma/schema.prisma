generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MCDONALD_DATABASE_URL")
}

model McdonaldUser {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  username     String
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("mcdonald_users")
}

model Categories {
  id       Int        @id @default(autoincrement())
  name     String
  products Products[]

  @@map("ecommerce_categories")
}

model Colors {
  id       Int        @id @default(autoincrement())
  name     String
  products Products[]

  @@map("ecommerce_colors")
}

model Products {
  id          Int        @id @default(autoincrement())
  name        String
  image       String
  price       Decimal
  discount    Decimal?
  rating      Decimal?
  description String
  created_at  DateTime   @default(now())
  updated_at  DateTime
  color_id    Int
  category_id Int
  size_id     Int
  highlight   Boolean
  ean         String     @unique
  categories  Categories @relation(fields: [category_id], references: [id], map: "fk_categories")
  colors      Colors     @relation(fields: [color_id], references: [id], map: "fk_colors")
  sizes       Sizes      @relation(fields: [size_id], references: [id], map: "fk_size")
  stocks      Stocks[]

  @@map("ecommerce_products")
}

model Sizes {
  id       Int        @id @default(autoincrement())
  name     String
  products Products[]

  @@map("ecommerce_sizes")
}

model Stocks {
  id             Int      @id @default(autoincrement())
  product_id     Int
  status         String
  purchase_price Decimal
  expiry_date    DateTime
  created_at     DateTime @default(now())
  updated_at     DateTime
  quantity       Int
  products       Products @relation(fields: [product_id], references: [id], map: "fk_products")

  @@map("ecommerce_stocks")
}

model EcommerceUser {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  first_name    String
  last_name     String
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime

  @@map("ecommerce_users")
}
